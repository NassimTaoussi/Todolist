{% extends 'base.html.twig' %}

{% block title %}Modifier la tâche "{{ task.title }}"{% endblock %}

{% block body %}

    <section class="row d-flex justify-content-center">
        <div class="col-6 d-flex justify-content-center">

            {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group mt-5 w-75 text-center">
                {{ form_label(form.title, 'Titre') }}
                {{ form_widget(form.title, {'attr': {'class': 'username_field'}}) }}
            </div>

            <div class="form-group mt-5 w-75 text-center">
                {{ form_label(form.content, 'Description') }}
                {{ form_widget(form.content, {'attr': {'class': 'email_field'}}) }}
            </div>

            <div class="form-group mt-5 w-75 text-center">
                <button type="submit" value='Modifier' class="btn btn-primary">Modifier</button>
            </div>

            {{ form_end(form) }}
        </div>
    </section>

    <a href="{{ path('tasks') }}" class="btn btn-success pull-right mt-5">Retour à la liste des tâches</a>

{% endblock %}