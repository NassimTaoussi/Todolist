{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}

    <section class="row d-flex justify-content-center">
        <div class="col-6 d-flex justify-content-center flex-column align-items-center">

            <h1 class="mt-5 text-center">Modifier le profil de {{ user.username }}</h1>

            {{ form_start(form, {'action' : path('edit_user', {'id' : user.id})}) }}
            {{ form_errors(form) }}

            <div class="w-100 d-flex justify-content-center flex-column align-items-center">
                <div class="form-group mt-5 w-75 text-center d-flex flex-column justify-content-center">
                    {{ form_label(form.username, 'Pseudo') }}
                    {{ form_widget(form.username, {'attr': {'class': 'username_field text-center'}}) }}
                </div>

                <div class="form-group mt-5 w-75 text-center d-flex flex-column justify-content-center">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email, {'attr': {'class': 'email_field text-center'}}) }}
                </div>

                <div class="form-group mt-5 w-75 text-center d-flex flex-column justify-content-center">
                    {{ form_label(form.password, 'Mot de passe') }}
                    {{ form_widget(form.password, {'attr': {'class': 'password_field text-center'}}) }}
                </div>

                <div class="form-group mt-5 w-75 text-center d-flex flex-column justify-content-center">
                    {{ form_label(form.role, 'Rôle') }}
                    {{ form_widget(form.role, {'attr': {'class': 'role_field text-center'}}) }}
                </div>

                <div class="form-group mt-5 w-75 text-center d-flex flex-column justify-content-center">
                    <button type="submit" value='Modifier' class="btn btn-primary">Modifier</button>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </section>

    <a href="{{ path('users') }}" class="btn btn-success pull-right mt-5">Retour à la liste des utilisateurs</a>

{% endblock %}