{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    <section class="row d-flex justify-content-center">
        <div class="col-6 d-flex justify-content-center">

            {% if app.user %}
                
                <div class="text-center mt-5" id="">
                    Vous etes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Deconnexion</a>
                </div>
            {% else %}

                <form method="POST" class="">
                    <div class="card text-white mb-3 d-flex justify-content-center flex-column align-items-center mt-5 bg-primary" id="loginCard">
                        <h1 class="h3 mb-1 font-weight-normal mt-4 text-center text-white">Se connecter</h1>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <div class="form-group mt-5 w-75 text-center">
                            <label class="form-label" for="inputEmail">Email</label>
                            <input type="email" class="form-control" placeholder="Email"  value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
                        </div>

                        <div class="form-group mt-5 w-75 text-center">
                            <label class="form-label" for="inputPassword">Mot de passe</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-lg bg-secondary text-white mt-5 mb-4 ps-5 pe-5" type="submit">
                            Connexion
                        </button>
                    </div>
                </form>
            {% endif %}
        </div>
    </section>

{% endblock %}
